<Window x:Class="AA.View.MainWindowClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AA.View"
        mc:Ignorable="d"
        Title="MainWindowClient" Height="450" Width="800" WindowState="Maximized">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" >
            <Menu>
                <MenuItem Header="Accueil" Click="Button_Click_HOME"/>

               

                <MenuItem Header="Vols">
                    <MenuItem Header="Liste des vols"  Click="Button_Click_vols"/>
                  
                </MenuItem>

                <MenuItem Header="Aeroports">
                    <MenuItem Header="Liste des aéroports"  Click="Button_Click_aeroports"/>
                    
                </MenuItem>

                

                    <MenuItem Header="Se déconnecter"  Click="Button_Click_Deco"/>
            </Menu>

        </StackPanel>
        <Frame x:Name="MainClient" Margin="0,40,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
